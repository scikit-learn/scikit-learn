[case testFromImportWithKnownModule]
from pkg import mod1
from pkg import mod2 as modmod
from pkg.mod2 import g as gg
from pkg.mod3 import h as h2, g as g2

def test_import() -> None:
    assert mod1.h(8) == 24
    assert modmod.g(1) == 1
    assert gg(2) == 2
    assert h2(10) == 12
    assert g2(10) == 13

